<Window x:Class="FlowCopy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowCopy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-16">
        <TextBlock x:Name="textBlock_clipboard" HorizontalAlignment="Left" Margin="248,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="158" Width="259"/>
        <ListBox x:Name="listBox_templates" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="27,19,0,66" SelectionChanged="listBox_SelectionChanged" HorizontalAlignment="Left" Width="183"/>
        <TextBlock x:Name="textBlock_template" HorizontalAlignment="Left" Margin="248,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="161" Width="259"/>
        <ComboBox x:Name="comboBox_tags" HorizontalAlignment="Left" Margin="548,20,0,0" VerticalAlignment="Top" Width="210" Height="26" SelectionChanged="comboBox_tags_SelectionChanged"/>
        <DataGrid x:Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="548,68,42,66"/>

    </Grid>
</Window>
